<!-- pro-edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
</head>
<body>
    <h1>Edit Product</h1>
    <form action="/product/edit/<%= product._id %>" method="POST">
        <label for="proName">Product Name:</label>
        <input type="text" id="proName" name="proName" value="<%= product.proName %>"><br>
        
        <label for="proPrice">Price:</label>
        <input type="text" id="proPrice" name="proPrice" value="<%= product.proPrice %>"><br>
        
        <label for="status">Status:</label>
        <select id="status" name="status">
            <option value="Active" <%= product.status === 'Active' ? 'selected' : '' %>>Active</option>
            <option value="Inactive" <%= product.status === 'Inactive' ? 'selected' : '' %>>Inactive</option>
        </select><br>

        <label for="category">Category:</label>
        <select id="category" name="cat_id_fk">
            <% categories.forEach(category => { %>
                <option value="<%= category._id %>" <%= product.cat_id_fk && product.cat_id_fk.toString() === category._id.toString() ? 'selected' : '' %>><%= category.catName %></option>
            <% }); %>
        </select><br>
        
        <button type="submit">Update Product</button>
    </form>
</body>
</html>
