<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show Categories</title>
</head>
<body>
    <h1>All Categories</h1>
    <h3><a href="/category/add">Add Cat</a></h3>
    <% if (categories.length === 0) { %>
        <p>No categories found.</p>
    <% } else { %>
        <table border="1">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                    <tr>
                        <td><%= category.catName %></td>
                        <td><img src="/uploads/<%= category.catPic %>" alt="<%= category.catName %>" width="100px" height="100px"></td>
                        <td><%= category.status %></td>
                        <td><%= category.date %></td>
                        <td><a href="/category/edit/<%= category._id %>">Edit</a></td>
                        <td><a href="#" onclick="deleteCategory('<%= category._id %>')">Delete</a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>

    <script>
        function deleteCategory(categoryId) {
            if (confirm('Are you sure you want to delete this category?')) {
                window.location.href = '/category/delete/' + categoryId;
            }
        }
    </script>
    
</body>
</html>
